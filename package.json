{
  "name": "quantiv",
  "version": "1.0.0",
  "description": "Quantiv is a modern web platform for options traders to instantly see market-implied moves before earnings. It computes expected moves, greeks, and IV rank from live options chains, with a clean dashboard, historical comparisons, and shareable insightsâ€”helping traders act with precision and speed.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/frontend",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "cd apps/backend && python main.py",
