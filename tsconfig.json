{
  "files": [],
  "include": [],
  "references": [
    { "path": "./apps/frontend" },
    { "path": "./packages/schemas" },
    { "path": "./packages/shared-types" },
    { "path": "./packages/database" }
  ],
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "composite": true
  }
}
